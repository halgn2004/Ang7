<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Ang7" x:Class="Ang7.App" 
             xmlns:helpers="clr-namespace:Ang7.Helpers">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <helpers:ArabicNumbersConverter x:Key="ToAr" />
            <helpers:ArabicDateDaysConverter x:Key="ToArdd" />
            <helpers:InvertBoolConverter x:Key="inverter" />
            <helpers:IntToStringConverter x:Key="IntToStringConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
