<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:handlers="clr-namespace:Ang7.Handlers"
             x:Class="Ang7.CustomControls.CustomCodeEntry" x:Name="Root">
    <Grid ColumnSpacing="5" HeightRequest="{OnIdiom Phone=55,Tablet=85}" ColumnDefinitions="*,*,*,*,*,*" FlowDirection="LeftToRight">

        <Border Grid.Column="0" BackgroundColor="#0ab0b0" Stroke="Gray" StrokeShape="RoundRectangle 10,10,10,10">
            <handlers:BorderlessEntry x:Name="Entry1" TextChanged="OnEntryTextChanged" Keyboard="Numeric" MaxLength="1" VerticalOptions="Fill" HorizontalOptions="Fill" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" FontSize="{OnIdiom Phone=12,Tablet=24}" />
            <Border.Triggers>
                <DataTrigger TargetType="Border" Binding="{Binding IsFocused, Source={x:Reference Entry1}}" Value="true">
                    <Setter Property="Stroke" Value="#0F97ED" />
                    <Setter Property="StrokeThickness" Value="{OnIdiom Phone=2,Tablet=4}" />
                </DataTrigger>
            </Border.Triggers>
