<?xml version="1.0" encoding="utf-8" ?>
<HorizontalStackLayout xmlns="http://schemas.microsoft.com/dotnet/2021/maui" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Ang7.CustomControls.CheckBoxLabeled" x:Name="this" MinimumHeightRequest="{OnPlatform iOS='30'}">

    <!-- Color="{Binding Source={x:Reference this}, Path=Color}" -->
    <CheckBox x:Name="CheckBox" IsChecked="{Binding Source={x:Reference this}, Path=IsChecked}" CheckedChanged="OnCheckChanged" Style="{StaticResource LKCheckBoxStyle}" MinimumHeightRequest="{OnPlatform iOS='30'}"/>

    <Label x:Name="Label" Text="{Binding Source={x:Reference this}, Path=Text}" VerticalOptions="Center" FontSize="{OnIdiom Phone=14,Tablet=28}" FontFamily="Poppins-SemiBold" TextColor="#DDDDDD" Margin="5,0,0,0">
        <Label.Triggers>
            <DataTrigger TargetType="Label" Binding="{Binding Source={x:Reference this}, Path=IsChecked}" Value="True">
                <Setter Property="TextColor" Value="#0AB0B0" />
            </DataTrigger>
        </Label.Triggers>
        <Label.GestureRecognizers>
            <TapGestureRecognizer Tapped="OnLabelClicked" />
        </Label.GestureRecognizers>
    </Label>

</HorizontalStackLayout>