<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui" xmlns:ct="clr-namespace:Ang7.CustomControls" xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit" BackgroundColor="{StaticResource VideoBackColor}" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:ffimage="clr-namespace:FFImageLoading.Maui;assembly=FFImageLoading.Compat.Maui" x:Class="Ang7.Views.PlayVideoPage" NavigationPage.HasNavigationBar="False" FlowDirection="RightToLeft">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness">
            <On Platform="iOS" Value="0,20,0,0" />
        </OnPlatform>
    </ContentPage.Padding>    
    <ContentPage.Content>
        <Grid RowDefinitions="62,*" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
            <Grid Grid.Row="0" MinimumHeightRequest="62" HeightRequest="62">
                <ffimage:CachedImage Grid.Row="0" Margin="{OnPlatform Android='-20,10',iOS='10'}" Source="close.png" BackgroundColor="Transparent" FlexLayout.AlignSelf="Center" FlexLayout.Grow="1" Aspect="AspectFit" HorizontalOptions="StartAndExpand">
                    <ffimage:CachedImage.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnBackClicked" />
                    </ffimage:CachedImage.GestureRecognizers>
                </ffimage:CachedImage>
                <Label x:Name="Title" Grid.Row="0" Text="LegendKnight" FontSize="18" FontFamily="Poppins-Medium" TextColor="White" Margin="0,10" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />
            </Grid>
            <toolkit:MediaElement x:Name="videoPlayer" Grid.Row="1" ShouldAutoPlay="True" ShouldShowPlaybackControls="True" BackgroundColor="{StaticResource VideoBackColor}" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>
            <ct:WatermarkControl Grid.Row="1" x:Name="WatermarkView" IsAnimationEnabled="True" />
        </Grid>
    </ContentPage.Content>
</ContentPage>