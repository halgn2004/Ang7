<?xml version="1.0" encoding="utf-8" ?>
<pages:PopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"             
             xmlns:pages="clr-namespace:RGPopup.Maui.Pages;assembly=RGPopup.Maui" 
             CloseWhenBackgroundIsClicked="False"
             mc:Ignorable="d" x:Class="Ang7.Views.PopUp.GetEntryText">
    <!-- Padding="24,0,24,30" Margin="24,0,24,24"-->
    <Border StrokeShape="RoundRectangle 25,25,25,25" FlowDirection="RightToLeft" VerticalOptions="Center" HorizontalOptions="FillAndExpand" Padding="24" Margin="24" BackgroundColor="White">
        <Grid HorizontalOptions="FillAndExpand" RowSpacing="{OnIdiom Phone=5,Tablet=20}" ColumnSpacing="20" RowDefinitions="auto,auto,auto" ColumnDefinitions="*,*">
            <Label Grid.Row ="0" Grid.Column="0" Grid.ColumnSpan="2" x:Name="HeadLabel" Text="Confirm" TextColor="Black" FontSize="{OnIdiom Phone=16,Tablet=36}" FontAttributes="Bold" FontFamily="Poppins-Regular" HorizontalTextAlignment="Start"/>
            <Entry Grid.Row ="1" Grid.Column="0" Grid.ColumnSpan="2" x:Name="entry" Style="{StaticResource Entry}" Margin="0,10,0,10" HorizontalOptions="FillAndExpand" MinimumWidthRequest="150" HeightRequest="{OnIdiom Tablet=80}" FontSize="{OnIdiom Phone=16,Tablet=36}"/>
            <Button Grid.Row ="2" Grid.Column="0" x:Name="NoBut" Text="No" Clicked="OnNoButClick" Style="{StaticResource Popup_NoBut}" />
            <Button Grid.Row ="2" Grid.Column="1" x:Name="YesBut" Text="Yes" Clicked="OnYesButClick" Style="{StaticResource Popup_YesBut}"  />
            <!--<Label x:Name="ErrorMsg" Text="LegendKnight" HorizontalOptions="Center" TextColor="Red" IsVisible="False" />-->
        </Grid>
    </Border>
</pages:PopupPage>